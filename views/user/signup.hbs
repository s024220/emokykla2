<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>Registracija</h1>
        {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{#each messages }}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
        {{/if}}
        <form action="/user/signup" method="post">
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input type="text" id="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="showname" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="form-control">
            </div>
            <div class="btn-group col-sm-6 col-md-12" data-toggle="buttons">
                <label class="btn btn-danger col-sm-6 col-md-12 rb">
                    <input type="radio" id="student" name="choice" onchange="uncheck()" autocomplete="off"> STUDENTAS
                </label>
                <label class="btn btn-danger col-sm-6 col-md-12 rb">
                    <input type="radio" id="teacher" name="choice" onchange="check()" autocomplete="off"> DESTYTOJAS
                </label>
                <input type="text" id="hidden-button" name="role" autocomplete="off" value="true">
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <p>_____________________________________________________</p>
            <button type="submit" class="btn btn-primary col-sm-6 col-md-12">Registruotis</button>
        </form>
    </div>
</div>